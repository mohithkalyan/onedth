<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/retailer_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="47dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/balance_card"
        app:layout_constraintBottom_toTopOf="@+id/mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="50dp"
        android:text="100000"
        android:paddingStart="20dp"
        android:paddingTop="6dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/dth"
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/dth_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mobile"
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:background="@drawable/mobile_card"
        app:layout_constraintBottom_toBottomOf="@+id/dth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dth"
        app:layout_constraintTop_toTopOf="@+id/dth" />

    <Button
        android:id="@+id/selfcare"
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selfcare_card"
        app:layout_constraintEnd_toEndOf="@+id/dth"
        app:layout_constraintTop_toBottomOf="@+id/dth" />

    <Button
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:background="@drawable/heavy_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selfcare"
        app:layout_constraintTop_toTopOf="@+id/selfcare" />

</androidx.constraintlayout.widget.ConstraintLayout>